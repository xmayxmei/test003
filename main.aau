//窗口提醒或提示
var remindByAlertOrTip = function(){
	if(isAlertTime){//到点提醒
     	if(isNoNoice){//是否静默提醒
        	tray = win.util.tray(mainForm.hwnd);
        	tray.pop(currRemdStr,frmName,2,0xFFFFFFFF);
        	tray.tip = currRemdStr ;	
    	}else{
    		tray = win.util.tray(mainForm.hwnd);
    		//tray.pop("","")
        	tray.tip = currRemdStr ;
    		if(isShowRemdWin){//是否显示窗口
        		win.setForeground(mainForm.hwnd);
    			formShowNow(titlRemdStr,currRemdStr,isShowRemdWin,remdDelayTimes);//窗口显示
    		}
    	}
    }else{ //未到点
    	tray = win.util.tray(mainForm.hwnd);
        tray.tip = nextRemdStr ;
        /**
        mainForm.text1.text="";
        mainForm.text2.text=nextRemdStr;
        mainForm.button.show(isShowRemdWin) ;
        mainForm.button2.show(isShowRemdWin) ;
        mainForm.button3.show(isShowRemdWin) ;
        **/
        formShowNow("",nextRemdStr,false,0);//窗口显示
    }
}
