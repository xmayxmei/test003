                        }
                        case (0x0202){//单击鼠标左键前置窗口
                            win.setForeground(mainForm.hwnd);
                            
                        }        
                    }                                                  
                } 
                case( 0x112/*_WM_SYSCOMMAND*/ ){ //系统命令消息
